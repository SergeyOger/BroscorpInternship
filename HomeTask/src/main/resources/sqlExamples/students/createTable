CREATE TABLE students
(
    id          SERIAL PRIMARY KEY,
    first_name  VARCHAR(50) NOT NULL,
    second_name VARCHAR(50) NOT NULL,
    course_name VARCHAR(60) NOT NULL
);

DROP TABLE students CASCADE;

CREATE TABLE courses
(
    id                 SERIAL PRIMARY KEY,
    course_name        VARCHAR(60) NOT NULL,
    course_description VARCHAR(200)
);

DROP TABLE courses CASCADE;

CREATE TABLE students_courses
(
    student_id INTEGER REFERENCES students (id) ON UPDATE CASCADE ON DELETE CASCADE,
    courses_id INTEGER REFERENCES courses (id) ON UPDATE CASCADE ON DELETE CASCADE
);

DROP TABLE students_courses;
